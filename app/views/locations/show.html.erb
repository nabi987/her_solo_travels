<div class="container">
  <h1>Travellers going to <%= @location.city %></h1>
  <% @locations.each do |location| %>
  <div class="location-user-cards">
      <%= link_to user_path(location.trip.user)  do %>
      <div class="location-user-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url('<%= cl_image_path location.trip.user.photo.key, crop: :fill, gravity: :face %>')">
        <div class="user-info">
          <p><%= location.trip.user.first_name %></p>
          </div>
          <div class="trip-info">
            <p> <i class="fa-solid fa-calendar-days" style="color: #ed719e;"></i> <%= location.start_date.strftime("%d %B %Y") %> - <%= location.end_date.strftime("%d %B %Y") %></p>
            <p> <i class="fa-regular fa-clipboard" style="color: #ed719e;"></i> <%= location.activites %></p>
          </div>
      </div>
  <% end %>
</div>
<% end %>
</div>
