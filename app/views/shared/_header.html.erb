<div class="header">
  <div class="logo">
    <%= link_to image_tag('logo.png', alt: 'Logo'), root_path, class: 'logo-button' %>
  </div>
  <div class="header-btns">
    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: 'header-btn'%>
    <% else %>
      <%= link_to 'Login', user_session_path, class: 'header-btn' %>
    <% end %>
  </div>
</div>
